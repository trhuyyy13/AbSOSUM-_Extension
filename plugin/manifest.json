{
	"name": "AbSOSUM - StackOverflow Answer Summarizer",
	"version": "2.0",
	"description": "Abstractive summarization for StackOverflow answers with weight-aware multi-answer summarization",
	"permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "service_worker": "background.js"
  },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
	"manifest_version": 3,
	"content_scripts":[
	{
    "matches": [
      "https://stackoverflow.com/questions/ask*"
    ],
    "css": ["styles.css"],
    "js": ["vendor-jquery.js", "main.js"],
    "run_at": "document_idle"
	},
	{
    "matches": [
      "https://stackoverflow.com/questions/*"
    ],
    "exclude_matches": [
      "https://stackoverflow.com/questions/ask*"
    ],
    "js": ["scraper.js"],
    "run_at": "document_idle"
	}
	]
}
